{
  "name": "mcp-manager",
  "displayName": "MCP Manager for Claude Code",
  "description": "Manage Claude Code MCP server configurations from VS Code sidebar",
  "version": "0.1.0",
  "publisher": "benlaufer",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/benlaufer/claude-mcp-extension"
  },
  "homepage": "https://github.com/benlaufer/claude-mcp-extension#readme",
  "bugs": {
    "url": "https://github.com/benlaufer/claude-mcp-extension/issues"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "model-context-protocol",
    "anthropic",
    "ai",
    "mcp-server"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-manager",
          "title": "MCP Manager",
          "icon": "media/mcp-icon.svg"
        }
      ]
    },
    "views": {
      "mcp-manager": [
        {
          "id": "mcpServersView",
          "name": "MCP Servers",
          "when": "true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "mcpServersView",
        "contents": "No MCP servers found.\n\nCreate a `.mcp.json` file in your workspace root or configure servers in `~/.claude.json`.\n[Learn More](https://docs.anthropic.com/en/docs/claude-code)",
        "when": "!mcpManager.hasServers"
      }
    ],
    "commands": [
      {
        "command": "mcpManager.refresh",
        "title": "Refresh MCP Servers",
        "icon": "$(refresh)",
        "category": "MCP Manager"
      },
      {
        "command": "mcpManager.enableServer",
        "title": "Enable Server",
        "category": "MCP Manager"
      },
      {
        "command": "mcpManager.disableServer",
        "title": "Disable Server",
        "category": "MCP Manager"
      },
      {
        "command": "mcpManager.editConfig",
        "title": "Edit Config File",
        "icon": "$(edit)",
        "category": "MCP Manager"
      },
      {
        "command": "mcpManager.checkHealth",
        "title": "Check Health",
        "icon": "$(heart)",
        "category": "MCP Manager"
      },
      {
        "command": "mcpManager.checkAllHealth",
        "title": "Check All Health",
        "icon": "$(pulse)",
        "category": "MCP Manager"
      },
      {
        "command": "mcpManager.editSetting",
        "title": "Edit Setting",
        "icon": "$(edit)",
        "category": "MCP Manager"
      },
      {
        "command": "mcpManager.editClaudeCodeSetting",
        "title": "Edit Claude Code Setting",
        "icon": "$(edit)",
        "category": "MCP Manager"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mcpManager.refresh",
          "when": "view == mcpServersView",
          "group": "navigation"
        },
        {
          "command": "mcpManager.checkAllHealth",
          "when": "view == mcpServersView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mcpManager.enableServer",
          "when": "view == mcpServersView && viewItem == mcpServer.disabled",
          "group": "inline"
        },
        {
          "command": "mcpManager.disableServer",
          "when": "view == mcpServersView && viewItem == mcpServer.enabled",
          "group": "inline"
        },
        {
          "command": "mcpManager.enableServer",
          "when": "view == mcpServersView && viewItem == mcpServer.disabled",
          "group": "1_toggle"
        },
        {
          "command": "mcpManager.disableServer",
          "when": "view == mcpServersView && viewItem == mcpServer.enabled",
          "group": "1_toggle"
        },
        {
          "command": "mcpManager.editConfig",
          "when": "view == mcpServersView && viewItem =~ /^mcpServer\\./",
          "group": "2_config"
        },
        {
          "command": "mcpManager.checkHealth",
          "when": "view == mcpServersView && viewItem == mcpServer.enabled",
          "group": "inline"
        },
        {
          "command": "mcpManager.checkHealth",
          "when": "view == mcpServersView && viewItem == mcpServer.enabled",
          "group": "3_health"
        },
        {
          "command": "mcpManager.editSetting",
          "when": "view == mcpServersView && viewItem == settingItem",
          "group": "inline"
        },
        {
          "command": "mcpManager.editClaudeCodeSetting",
          "when": "view == mcpServersView && viewItem == claudeCodeSettingItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.80.0",
    "@types/which": "^3.0.4",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "which": "^4.0.0",
    "zod": "^3.25.76"
  }
}
